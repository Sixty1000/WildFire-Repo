#include <stdlib.h>
#include <string.h>
#include <Screen_HX8353E.h>
#include <Terminal12e.h>
#include <Terminal6e.h>
#include <Terminal8e.h>
#include <gpio.h>


Screen_HX8353E myScreen;

int threshold;
bool passed_threshold;
volatile uint8_t temp;
int input = 0;
int count = 0;

void RGB_output(uint8_t count) {
  
    /*
     * Add RGB counter from Lab 5 here
     * This will increment every second
     * This is a visual representation that your stopwatch is working
     */

     if(count == 0){
    GPIO_setOutputLowOnPin(GPIO_PORT_P2, GPIO_PIN0 | GPIO_PIN1 | GPIO_PIN2);
  } else if(count == 1){
    GPIO_setOutputLowOnPin(GPIO_PORT_P2, GPIO_PIN1 | GPIO_PIN2);
    GPIO_setOutputHighOnPin(GPIO_PORT_P2, GPIO_PIN0);
  }

}

void setup() {
  
  GPIO_setAsInputPinWithPullUpResistor(GPIO_PORT_P1, GPIO_PIN1);
  GPIO_setAsOutputPin(GPIO_PORT_P2, GPIO_PIN0 | GPIO_PIN1 | GPIO_PIN2);
  GPIO_setOutputLowOnPin(GPIO_PORT_P2, GPIO_PIN0 | GPIO_PIN1 | GPIO_PIN2);
  
  // put your setup code here, to run once:

}

void loop() {

  if(GPIO_getInputPinValue(GPIO_PORT_P1, GPIO_PIN1) == 0){
    input = 1;
    RGB_output(input);
  } else{
    input = 0;
    RGB_output(input);
  }
  // put your main code here, to run repeatedly: 
  
}
